<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_sdlc_apex_inherit_product_form">
            <field name="name">product.form.sdlc.apex.inherit</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="model">product.template</field>
            <field name="arch" type="xml">

                <xpath expr="//header" position="inside">
                    <button name="create_lot_sequence_auto" type="object" string="Set Lot Sequence" class="btn-primary"/>
                </xpath>
                <xpath expr="//notebook" position="inside">
                    <page string="Apex">
                        <group>
                            <group>
                                <field name="article" />
                                <field name="colour" />
                            </group>
                            <group>
                                <field name="hardness_type" />
                                <field name="size" />
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
	</data>
</odoo>