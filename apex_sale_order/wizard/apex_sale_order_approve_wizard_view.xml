<odoo>
    <record id="view_apex_sale_order_approve_wizard" model="ir.ui.view">
        <field name="name">apex.sale.order.approve.wizard.form</field>
        <field name="model">apex.sale.order.approve.wizard</field>
        <field name="arch" type="xml">
            <form string="Apex Sale Order Approve Wizard">
                <group>
                    <field name="comments"/>
                    <field name="apex_sale_order_id" invisible="1"/>
                </group>
                <footer>
                    <button name="approve_order" type="object" string="Approve Order" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>