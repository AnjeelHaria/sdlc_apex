<odoo>
    <record id="view_apex_sale_order_validate_wizard" model="ir.ui.view">
        <field name="name">apex.sale.order.validate.wizard.form</field>
        <field name="model">apex.sale.order.validate.wizard</field>
        <field name="arch" type="xml">
            <form string="Apex Sale Order Approve Wizard">
                <group>
                    <field name="comments"/>
                    <field name="apex_sale_order_id" invisible="1"/>
                </group>
                <footer>
                    <button name="validate_order" type="object" string="Validate Order" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>